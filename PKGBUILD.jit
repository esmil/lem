pkgname=lem
pkgver=0.1
pkgrel=1
pkgdesc="A Lua Event Machine"
arch=('i686' 'x86_64')
url="https://github.com/esmil/lem"
license=('GPL')
depends=('luajit2')
optdepends=('lem-streams: for lem-repl')
source=()

_lua='/usr/bin/luajit2'

build() {
  cd "$startdir"

  make NDEBUG=1 LUA="$_lua"
}

package() {
  cd "$startdir"

  make DESTDIR="$pkgdir/" PREFIX='/usr' LUA="$_lua" install
}

