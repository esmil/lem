local io   = require 'lem.io'
local repl = require 'lem.repl'

io.stdout:write([[
A Lua Event Machine 0.3  Copyright 2011-2012 Emil Renner Berthing
]])

local _, err = repl.repl('stdin', io.stdin, io.stdout)
print(err or '')

